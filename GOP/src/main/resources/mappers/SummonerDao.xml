<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gg.gop.dao.SummonerDao">

	<insert id="saveinfodata">
		INSERT IGNORE INTO info VALUES (
		#{matchId},
		#{riotIdGameName},
		#{riotIdTagline},
		#{summonerLevel},
		#{gameMode},
		#{teamId},
		#{win},
		#{championName},
		#{kills},
		#{deaths},
		#{assists},
		#{kda},
		#{lane},
		#{totalDamageDealtToChampions},
		#{totalDamageTaken},
		#{totalMinionsKilled},
		#{gameDuration},
		#{queueId}
		);
	</insert>
	<insert id="saveteamsdata">
		INSERT IGNORE INTO teams
		VALUES
		(#{matchId},#{teamchampionkills},#{teamwin});
	</insert>
	<select id="getGameInfoFromDB" resultType="map">
		select * from GameInfo;
	</select>

	<select id="checkDuplicateKey" resultType="int">
		SELECT COUNT(*) FROM
		GameInfo WHERE matchId = #{matchId} AND riotIdGameName
		=
		#{riotIdGameName};
	</select>

	<select id="retrieveAllDataFromDB" resultType="map">
		select * from GameInfo;
	</select>
	<select id="getGameDataFromDB" parameterType="map"
		resultType="map">
		SELECT *
		FROM GameInfo
		WHERE matchId = #{matchId} AND
		riotIdGameName = #{riotIdGameName}
	</select>
</mapper>