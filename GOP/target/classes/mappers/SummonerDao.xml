<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gg.gop.dao.SummonerDao">

	<insert id="saveGamedata">
		INSERT IGNORE INTO gameinfo2
		VALUES (#{matchId},
		#{gameDuration}, #{queueId}, #{riotIdGameName},
		#{riotIdTagline},
		#{summonerLevel}, #{gameMode}, #{teamId}, #{win},
		#{teamchampionkills}, #{teamwin},
		#{championName},
		#{kills}, #{deaths},
		#{assists}, #{kda}, #{lane},
		#{totalDamageDealtToChampions},
		#{totalDamageTaken}, #{totalMinionsKilled});
	</insert>
	<select id="getGameInfoFromDB" resultType="map">
		select * from
		gameinfo2 where riotIdGameName = #{riotIdGameName} and
		riotIdTagline =
		#{riotIdTagline}
		order by matchId desc;
	</select>
	<select id="checkDuplicateKey" resultType="int">
		SELECT COUNT(*) FROM
		gameinfo2 WHERE matchId = #{matchId} AND riotIdGameName
		=
		#{riotIdGameName};
	</select>
	<select id="getGameDataFromDB" resultType="map"
		parameterType="map">
		SELECT * FROM gameinfo2
		WHERE matchId = #{matchId} AND
		riotIdGameName = #{riotIdGameName};
	</select>

	<select id="retrieveAllDataFromDB" resultType="map">
		SELECT * FROM
		gameinfo2;
	</select>
</mapper>